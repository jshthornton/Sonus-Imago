{
	"manifest_version": 2,
	"name": "Project Harmony",
	"version": "0.1.0",
	"description": "Assists non-sighted users with playing a amospheric melody that collerates with the colours in an image on the active webpage.",

	"author": "Joshua Thornton",

	"permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	],

	"background": {
		"scripts": ["scripts/require.js", "scripts/require-config.js", "scripts/background/main.js"]
	},

	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["scripts/require.js", "scripts/require-cs.js", "scripts/require-config.js"/*, "scripts/content/main.js"*/]
		}
	],

	"web_accessible_resources": [
		"content/*",
		//"options/*",
		"shared/*"
	],
	"options_page": "options/index.html",



	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}